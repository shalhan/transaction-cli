{
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  },
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
